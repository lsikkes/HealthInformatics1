<Window x:Class="GeenNaam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Visualizer"
        KeyDown="keyPress"
        >

    <!--    Add the menu here aswell -->
    <Grid Name="map" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top">
        <!--    Use this as a mask for rounded corners -->
        <Border Name="mask" Background="White" CornerRadius="70"/>
    </Grid>
</Window>
